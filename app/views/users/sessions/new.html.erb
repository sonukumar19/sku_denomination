<div class="col-md-3"></div>
<div class="col-md-6">
  <div class="row">
    <div class="col-sm-12">
      <h2 class="text-center">Log in</h2>
    </div>
  </div>
  <hr>
  <br>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "form-horizontal") do |f| %>
    <div class="form-group">
      <div class="row">
        <label class="control-label col-sm-3" for="email">Email</label>
        <div class="col-sm-9">
          <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "Enter email" %>
        </div>
      </div>
    </div>
    <div class="form-group">
      <div class="row">
        <label class="control-label col-sm-3" for="pwd">Password</label>
        <div class="col-sm-9">          
          <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Enter password" %>
        </div>
      </div>
    </div>
    <% if devise_mapping.rememberable? -%>
      <div class="form-group">
        <div class="row">
        <div class="col-sm-3"></div>
        <div class="col-sm-9">
          <div class="checkbox">
            <label>
              <input type="checkbox"> Remember me
            </label>
          </div>
        </div>
      </div>
    <% end %>
    <br>
    <div class="form-group">        
      <div class="row">
        <div class="col-md-12 text-center">
          <%= f.submit "Log in", class: "btn btn-primary btn-user" %>
        </div>
      </div>
    </div>
  <% end %>
  <hr>
  <%= render "users/shared/links" %>
</div>
<div class="col-md-3"></div>
