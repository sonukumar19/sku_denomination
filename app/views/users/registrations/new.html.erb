<div class="col-md-3"></div>
<div class="col-md-6">
  <div class="row">
    <div class="col-sm-12">
      <h2 class="text-center">Sign up</h2>
    </div>
  </div>
  <hr>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name),
    class: "form-horizontal") do |f| %>
    <div class="form-group">
      <div class="row">
        <%= devise_error_messages! %>
      </div>
    </div>

    <div class="form-group">
      <div class="row">
        <label class="control-label col-sm-3" for="email">Email</label>
        <div class="col-sm-9">
          <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "Enter email" %>
        </div>
      </div>
    </div>
    <div class="form-group">
      <div class="row">
        <label class="control-label col-sm-3" for="email">First Name</label>
        <div class="col-sm-9">
          <%= f.text_field :first_name, autofocus: true, class: "form-control", placeholder: "Enter first name" %>
        </div>
      </div>
    </div>
    <div class="form-group">
      <div class="row">
        <label class="control-label col-sm-3" for="email">Last Name</label>
        <div class="col-sm-9">
          <%= f.text_field :last_name, autofocus: true, class: "form-control", placeholder: "Enter last name" %>
        </div>
      </div>
    </div>
    <div class="form-group">
      <div class="row">
        <label class="control-label col-sm-3" for="pwd">Password</label>
        <div class="col-sm-9">          
          <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Enter password" %>
        </div>
      </div>
    </div>
    <div class="form-group">
      <div class="row">
        <label class="control-label col-sm-3" for="pwd">Confirmation Password</label>
        <div class="col-sm-9">
          <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "Re-enter password" %>
        </div>
      </div>
    </div>
    <br>
    <div class="form-group">        
      <div class="row">
        <div class="col-md-12 text-center">
          <%= f.submit "Sign up", class: "btn btn-primary btn-user" %>
        </div>
      </div>
    </div>
  <% end %>
</div>
